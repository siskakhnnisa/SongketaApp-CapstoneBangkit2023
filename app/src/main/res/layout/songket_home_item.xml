<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/secondary2"
    card_view:circularflow_radiusInDP="15dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary2"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_item_songket_picture"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/image_songket"
            android:scaleType="fitXY"
            android:src="@color/black"
            android:background="@android:color/transparent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_item_origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/province_dummy"
            android:textColor="@color/primary"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_songket_picture"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_songket"
            card_view:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/province_dummy" />

        <TextView
            android:id="@+id/tv_item_songket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="@string/songket_dummy"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_songket_picture"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toTopOf="@+id/tv_item_desc"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintVertical_bias="0.0"
            tools:text="@string/songket_dummy" />

        <TextView
            android:id="@+id/tv_item_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/roboto_light"
            android:maxLines="3"
            android:text="@string/desc_dummy"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/iv_item_songket_picture"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_origin"
            card_view:layout_constraintVertical_bias="0.113" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
